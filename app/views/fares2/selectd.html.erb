<h1>Please select your Destination City</h1>


<%= form_tag(selectd_done_path, method: :get) do %>
  
	<% @cities.each do |c| %>
	
		
		<%= radio_button_tag(:city, c[:citycode], checked: :true) %>
		<%= label_tag(:city_label, c[:citycode] + ' ' + c[:cityname] + ', ' + c[:countryname] + ', '+ c[:airports]) %>

		<br>

	<% end %>

	<br>

  <div><%= submit_tag 'Done', :class => 'submit btn btn-primary' %></div>

<% end %>

<%= image_tag("loading.gif", id: "gif", style: "display: block; margin: 0 auto; width: 100px; visibility: hidden;") %>

<script type="text/javascript">
    $('.btn-primary').click(function() {
    	$('#gif').css('visibility', 'visible');
    	return true;
	});
 </script>


